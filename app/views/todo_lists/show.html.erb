<p>
  <strong>Title:</strong>
  <%= @todo_list.title %>
</p>

<h2>Todo items</h2>
<table class="pretty">
  <tr>
    <th>Todo item</th>
    <th>Difficulty</th>
    <th>Deadline</th>
  </tr>
  <% @todo_list.todo_items.each do |todo_item| %>
  <tr>
  	<td><%= todo_item.content %><td>
  	<td><%= todo_item.difficulty %><td>
    <td><%= todo_item.deadline %><td>
    <td><%= link_to 'Completed', [todo_item.todo_list, todo_item],
               method: :delete,
               data: { confirm: 'Are you sure?' } %><td>
  <tr>
  <% end %>	
</table>

<h2>Add todo items:</h2>
<%= render "todo_items/form" %>

<%= link_to 'Back', todo_lists_path %>
| <%= link_to 'Edit', edit_todo_list_path(@todo_list) %>