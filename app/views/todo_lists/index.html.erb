<%- model_class = TodoList -%>
<div class="jumbotron text-center">
  <h1>To do list</h1>
  <p>Never too late to learn</p> 
</div>
<table class="table table-striped">
  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= link_to todo_list.title, todo_list_path(todo_list)%><span class="badge"><%= @todo_lists.size %></span></td>
        <td>
          <%= link_to todo_list_path(todo_list),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } do %>
              <i class="fa fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_todo_list_path,
            :class => 'btn btn-primary' %>

<%= link_to t('.new1', :default => t("helpers.links.new1")),
            new_weekly_todo_list_path,
            :class => 'btn btn-primary' %>
